<script src="../js/calcfunction.js"></script>
<script>
	function calc(btn) {
		//입력한 값 가져오기 
		vx = document.getElementById('x').value;
		vy = document.getElementById('y').value;
		
		//button 의 value 가져오기 
		v1 = btn.getAttribute('value');
		//v2 = btn.value;
		//console.log(v1,v2);
		
		//값 비교 
		switch(v1) {
		case "+":	res = add(vx,vy);		break;
		case "-":	res = add(vx,vy);		break;
		case "*":	res = add(vx,vy);		break;
		case "/":	res = add(vx,vy);		break;
		}
	}
</script>
</head>
<body>
	<form>
	      첫번째 :<input id="x"><br>
	      두번째 :<input id="y"><br>
	      결과 :<input id="sum"><br>
	      <input type="button"  onclick="calc(this)" value="+">
	      <input type="button"  onclick="calc(this)" value="-">
	      <input type="button"  onclick="calc(this)" value="*">
	      <input type="button"  onclick="calc(this)" value="/"><br>
	      <p>첫번째 값 :<span id="sp1"></span> </p>
	      <p>두번째 값 :<span id="sp2"></span> </p>
	      <p>결과 :<span id="sp3"></span> </p>	  
	    </form>
