<script>
	function add(){
		//글자를 .dv3 에 추가한다 
		//글자를 text Object로 생성
		vtext = document.creatTextNode('hello');
		
		//.dv3 요소 검색 
		/*
		vd3 = document.getElementsByClassName('dv3');
		vd3[0].속성;
		
		vd3 = document.getElementsByClassName('dv3')[0];
		vd3.속성;
		*/
		vd3 = document.querySelector('.dv3');
		
		//검색 요소에 text Object 를 추가 
		vd3.appendChild(vtext);
	}
</script>
