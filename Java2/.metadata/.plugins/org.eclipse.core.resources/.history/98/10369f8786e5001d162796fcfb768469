class ThreadStopTest1 extends Thread {
	private boolean stop;

	public void setStop(boolean stop) {
		this.stop = stop;
	}

	@Override
	public void run() {
		while (!stop) {
			System.out.println("ì“°ë ˆë“œ ì‹¤í–‰ ì¤‘...");
		} 
		
		System.out.println("ìì› ì •ë¦¬...");
		System.out.println("ì“°ë ˆë“œ ì¢…ë£Œ...");
	}
}

